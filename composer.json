	"minimum-stability": "dev",
	"license"          : "GPL-2.0+",
	"type"             : "wordpress-plugin",
	"authors"          : [
		{
			"name" : "John P. Bloch",
			"email": "me@johnpbloch.com"
		}
	],
	"repositories"     : [
